<div class="clubhouse col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading"><h2>New post</h2></div>
    <div class="panel-body">

      <%= form_with model: @post do |f| %>
        <%= render "posts/errors" %>

        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :body %><br />
          <%= f.text_area :body, class:"form-control", rows: 10 %>
        </div>


        <div class="actions">
          <%= f.submit "Publish Post", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
    <div class="panel-footer"><%= link_to 'All Posts', posts_index_path  %></div>
  </div>
</div>
