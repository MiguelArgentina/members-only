<% if @post.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger w-50">
      The form contains <%= pluralize(@post.errors.count, "error") %>
    </div>
    <ul>
      <% @post.errors.full_messages.each do |error| %>
        <li class="text-danger"> <%= error %> </li>
      <% end %>
    </ul>
  </div>
<% end %>