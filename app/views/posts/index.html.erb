<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<br>
<strong><%= @posts.count %></strong>
<br>
<ul>
  <% @posts.each do |post| %>
    <li>
      <div class="container">
        <div class="row">
          <div class="col-6">
            <h3><%= post.title %></h3>
          </div>
          <div class="col-6">
            <% if member_signed_in? %>
              <p>
                <h6><%= current_member.name %></h6>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
