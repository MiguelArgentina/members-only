<div class="center">
  <h1>Exclusive Topics</h1>
  <p>Discover trending posts from our members</p>
</div>

<div class="container">
    <div class="row">
      <% @posts.each do |post| %>
      <div class="panel panel-default col-6">
          <div class="panel-heading"><h3><%= post.title %></h3></div>
          <div class="author panel-body">
            <%= post.body %><br>
            <p><%= author(post) %>&nbsp;&bull;&nbsp;<%= post.created_at %></p>
          </div>
      </div>
      <% end %>
    </div>
</div>



